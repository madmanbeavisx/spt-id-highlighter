<!--suppress ALL -->
<idea-plugin>
    <id>com.madmanbeavis.spt-id-highlighter</id>
    <name>SPT ID Highlighter</name>
    <vendor email="madmanbeavis@gmail.com" url="https://github.com/madmanbeavisx">MadManBeavis</vendor>

    <description><![CDATA[
    This plugin aids in the development of the <a href="https://github.com/sp-tarkov">Single Player Tarkov</a> project by providing additional information about items, quests, and other game objects directly within JetBrains Rider.
    <br><br>
    <b>Features:</b>
    <ul>
        <li>Hover over SPT IDs to see detailed information</li>
        <li>Visual highlighting of SPT IDs in code</li>
        <li>Multilingual support (17 languages)</li>
        <li>Custom ID support via .sptids file</li>
    </ul>
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>JavaScript</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Settings -->
        <applicationConfigurable
            parentId="tools"
            instance="com.madmanbeavis.sptidHighlighter.settings.SptIdSettingsConfigurable"
            id="com.madmanbeavis.sptidHighlighter.settings.SptIdSettingsConfigurable"
            displayName="SPT ID Highlighter"/>

        <applicationService
            serviceImplementation="com.madmanbeavis.sptidHighlighter.settings.SptIdSettingsState"/>

        <!-- Services -->
        <applicationService
            serviceImplementation="com.madmanbeavis.sptidHighlighter.services.SptDataService"/>

        <projectService
            serviceImplementation="com.madmanbeavis.sptidHighlighter.services.SptIdsFileWatcher"/>

        <!-- Project Startup Activity -->
        <postStartupActivity
            implementation="com.madmanbeavis.sptidHighlighter.listeners.SptProjectListener"/>

        <!-- Notification Group -->
        <notificationGroup id="SPT ID Highlighter" displayType="BALLOON"/>

        <!-- Documentation Provider -->
        <lang.documentationProvider
            language="JSON"
            implementationClass="com.madmanbeavis.sptidHighlighter.documentation.SptIdDocumentationProvider"/>

        <lang.documentationProvider
            language="TypeScript"
            implementationClass="com.madmanbeavis.sptidHighlighter.documentation.SptIdDocumentationProvider"/>

        <!--suppress PluginXmlValidity -->
        <lang.documentationProvider
            language="C#"
            implementationClass="com.madmanbeavis.sptidHighlighter.documentation.SptIdDocumentationProvider"/>

        <lang.documentationProvider
            language="JavaScript"
            implementationClass="com.madmanbeavis.sptidHighlighter.documentation.SptIdDocumentationProvider"/>

        <!-- Annotator -->
        <annotator
            language="JSON"
            implementationClass="com.madmanbeavis.sptidHighlighter.annotator.SptIdAnnotator"/>

        <annotator
            language="TypeScript"
            implementationClass="com.madmanbeavis.sptidHighlighter.annotator.SptIdAnnotator"/>

        <!--suppress PluginXmlValidity -->
        <annotator
            language="C#"
            implementationClass="com.madmanbeavis.sptidHighlighter.annotator.SptIdAnnotator"/>

        <annotator
            language="JavaScript"
            implementationClass="com.madmanbeavis.sptidHighlighter.annotator.SptIdAnnotator"/>
    </extensions>

    <actions>
        <!-- Diagnostic Action -->
        <action id="com.madmanbeavis.sptidHighlighter.DiagnosticAction"
                class="com.madmanbeavis.sptidHighlighter.actions.DiagnosticAction"
                text="SPT ID Highlighter: Show Diagnostics"
                description="Show diagnostic information about SPT ID Highlighter plugin">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>

        <!-- Generate MongoDB ObjectId Action -->
        <action id="com.madmanbeavis.sptidHighlighter.GenerateMongoIdAction"
                class="com.madmanbeavis.sptidHighlighter.actions.GenerateMongoIdAction"
                text="Generate MongoDB ObjectId"
                description="Generate a valid MongoDB ObjectId at cursor position">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <add-to-group group-id="GenerateGroup" anchor="first"/>
            <add-to-group group-id="NewGroup" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift alt W"/>
        </action>
    </actions>
</idea-plugin>
